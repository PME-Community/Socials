@{
	ViewData["Title"] = "Forgot Password";
	Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}


<div class="col-lg-8 col-md-12 col-sm-9 col-xs-12 form-box">
	<div class="logo mt-5 mb-3 text-center">
		<a asp-controller="Social" asp-action="Index">
			<img src="~/image/pme ppt logo.png" width="150px" />
		</a>
	</div>
	<div class="reset-form d-block">
		<form class="reset-password-form">
			<h4 class="mb-3">Reset Your Password</h4>
			<p class="mb-3 text-white">
				Please enter your email address and we will send you a password reset link
			</p>
			<div class="form-input">
				<span><i class="fa fa-envelope"></i></span>
				<input type="email" placeholder="Email Address" required>
			</div>
			<div class="mb-3">
				<button type="submit" class="btn">Send Reset link</button>
				<a style="color:white;" asp-controller="Auth" asp-action="Login">
					Back to Login
				</a>
			</div>

		</form>
	</div>
	<div class="reset-confirmation d-none">
		<div class="mb-4">
			<h4 class="mb-3">Link was sent</h4>
			<h6 class="text-white">Please, check your inbox</h6>
		</div>
		<div>
			<a href="login.html">
				<button type="submit" class="btn">Login Now</button>
			</a>
		</div>
	</div>
</div>
